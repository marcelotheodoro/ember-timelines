<h1>Tasks</h1>

<table class="table table-bordered table-striped">
  <thead>
  <tr>
    <th>
      Name
      <br><small class="small not-bold">(Click on name for editing)</small>
    </th>
  </tr>
  </thead>
  <tbody>
  {{#each model as |task|}}
    <tr>
      <td>
        {{#if task.isEditing}}
          <form {{action 'saveTask' task on='submit'}} class="form-inline">
            <div class="input-group">
              {{input value=task.name class="form-control"}}
              <div class="input-group-btn">
                <button type="submit" class="btn btn-success" disabled={{task.isNotValid}}>Save</button>
                <button class="btn btn-danger" {{action 'cancelTaskEdit' task}}>Cancel</button>
              </div>
            </div>
          </form>
        {{else}}
          <span {{action 'editTask' task}}>{{task.name}}</span>
        {{/if}}
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>